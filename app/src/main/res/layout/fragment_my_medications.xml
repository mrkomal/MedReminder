<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_medications_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/delete_medication_edittext"
        android:layout_width="239dp"
        android:layout_height="53dp"
        android:hint="@string/name_of_medicine"
        app:layout_constraintBottom_toTopOf="@+id/my_medications_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"></EditText>

    <Button
        android:id="@+id/delete_medication_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toTopOf="@+id/my_medications_list"
        app:layout_constraintStart_toEndOf="@+id/delete_medication_edittext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>